<div class="row">
    <div class="col">
        <a class="btn btn-success my-2" href="{{checkPrefix "/events/edit"}}">
        <i class="fa fa-plus"></i>
        New Event
        </a>


    <div class="row">
        {{#each events}}
        <div class="col-3">
            <div class="card">
            <img src="{{QRCode}}" class="card-img-top" alt="{{Name}} QR Code" width="200" />
            <div class="card-body">
                <h5 class="card-title text-center">
                    <a href="{{checkPrefix "/events/view/"}}{{Id}}">
                        {{Name}}
                    </a>
                </h5>
                <p class="card-text">
                    <div class="row">
                        <div class="col">
                            <span class="badge bg-{{eventStatusColor Status 'badge'}}">{{Status}}</span>
                        </div>
                        <div class="col-auto">
                            <span class="badge bg-secondary">{{AvailableCount}}</span>
                            <span class="badge bg-info">{{SentCount}}</span>
                            <span class="badge bg-success">{{RedeemedCount}}</span>
                        </div>
                    </div>
                    
                </p>
            </div>
            </div>
        </div>
        {{/each}}
    </div>

    </div>
</div>

