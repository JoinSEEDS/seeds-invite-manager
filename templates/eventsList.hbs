<div class="row">
    <div class="col">
        <a class="btn btn-success" href="{{checkPrefix "/events/edit"}}">
        <i class="fa fa-plus"></i>
        New Event
        </a>


        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Invites</th>
                    <th>Sent</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each events}}
                <tr>
                    <td>
                        <a href="{{checkPrefix "/events/view/"}}{{Id}}">{{Name}}</a>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <a class="btn btn-outline-secondary" href="{{checkPrefix "/events/edit/"}}{{Id}}">
                        <i class="fa fa-pen"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

